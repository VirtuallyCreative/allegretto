{
  "name": "allegretto",
  "version": "1.1.1",
  "description": "A fast and lively CSS framework",
  "main": "dist/retto.min.css",
  "scripts": {
    "start": "browser-sync start --server --directory --files '**/*.css' '**/*.html'",
    "lint": "stylelint 'src/*.css !retto.*'",
    "build": "rm -r dist/ && yarn lint && yarn postcss",
    "postcss": "postcss ./src/retto.css -d dist/ --ext min.css",
    "watch": "SET NODE_ENV=development && yarn postcss -w",
    "test": "true",
    "docs": "harp server docs --port 5000"
  },
  "keywords": [
    "css",
    "minimal",
    "web"
  ],
  "author": "Al Romano",
  "license": "MIT",
  "homepage": "https://allegretto.herokuapp.com/",
  "repository": {
    "type": "git",
    "url": "git@github.com:VirtuallyCreative/allegretto.git"
  },
  "bugs": {
    "url": "https://github.com/VirtuallyCreative/allegretto/issues/new"
  },
  "devDependencies": {
    "browser-sync": "^2.26.3",
    "cssnano": "^4.1.8",
    "ejs-lint": "^0.3.0",
    "postcss-cli": "^6.1.1",
    "postcss-csso": "^3.0.0",
    "postcss-import": "^12.0.1",
    "postcss-preset-env": "^6.5.0",
    "stylelint": "^9.10.1",
    "stylelint-config-recommended": "^2.1.0"
  },
  "files": [
    "src/",
    "dist/",
    "README.md"
  ],
  "dependencies": {
    "harp": "^0.29.0"
  }
}
